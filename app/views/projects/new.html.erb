
<div class='container-fluid'>
	<div class='row'>
		<div class='col-sm-3'></div>
		<div class='col-sm-6'>
			 <div class="panel panel-success">
			 	<div class='panel-heading'>Login </div>
  <div class="panel-body">
           <%= form_tag("/projects/create", :class => 'form-horizontal', method: "post") do %>
         <div class='form-group'>
          <%= label_tag(:name, "Name:") %>
          <%= text_field_tag(:name) %>
          </div>
         <div class="form-group">
          <%= label_tag(:description, "Description:") %>
            <%= text_field_tag(:description) %>
            	
            </div>
         <div class="form-group"> <%= select_tag(:user_ids,options_from_collection_for_select(User.where(:role => "Developer"), :id, :name).html_safe, multiple: true ) %>   
          </div>


            <%= submit_tag("CREATE PROJECT") %>
          <% end %>
        </div>
		 </div>
		</div>
		<div class='col-sm-3'></div>


	</div>
</div>

