



<div class='container-fluid'>
	<div class='row'>
		<div class='col-sm-3'></div>
		<div class='col-sm-6'>
			 <div class="panel panel-success" style="margin: 2px">
			 	<div class='panel-heading'>Sign up </div>
  <div class="panel-body" style="margin: 4px">
  	<%= form_for User.new , :class => "form-horizontal",:url => users_signup_path do |f| %>
    <div class="form-group">  <%= f.label :name %>
  <%= f.text_field :name %></div>

 <div class="form-group">  <%= f.label :email %>
  <%= f.email_field :email %></div>

 <div class="form-group"> <%= f.label :password %>
  <%= f.password_field :password %></div>
 
 <div class="form-group"><%= f.label :role %>: <%= f.select :role, options_for_select(["Manager", "Developer", "QA"]) %></div>


 <div class="form-group"> <%= f.submit "Submit" %></div>
 
<% end %>
</div>
</div>
		</div>
		<div class='col-sm-3'></div>


	</div>
</div>
